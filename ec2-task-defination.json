{
  "family": "vendor-portal-api-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::088462465887:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::088462465887:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "vendor-portal-api",
      "image": "088462465887.dkr.ecr.us-east-2.amazonaws.com/vendor-portal-api:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "DATABASE_URL",
          "value": "postgresql://postgres:db_admin@vendor-portal-db.cszf6hop4o2t.us-east-2.rds.amazonaws.com:5432/mannbiome"
        },
        {
          "name": "JWT_SECRET_KEY",
          "value": "your-super-secret-jwt-key-change-this-in-production"
        },
        {
          "name": "JWT_ALGORITHM",
          "value": "HS256"
        },
        {
          "name": "ACCESS_TOKEN_EXPIRE_MINUTES",
          "value": "30"
        },
        {
          "name": "FRONTEND_URL",
          "value": "https://your-frontend-domain.com"
        },
        {
          "name": "CORS_ORIGINS",
          "value": "https://your-frontend-domain.com"
        },
        {
          "name": "PORT",
          "value": "8000"
        },
        {
          "name": "HOST",
          "value": "0.0.0.0"
        }
      ],
              "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/vendor-portal-api",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/ || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}